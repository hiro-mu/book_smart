<%= render "shared/header" %>
<div class="book-contents">
  <h2 class="title">あなたの本棚</h2>
    <ul class='book-lists'>
      <% if user_signed_in? %>
        <% @books.each do |book| %>
          <li class = "list">
            <div class="book-image-content">
              <%if book.image.attached? %>
                <%= image_tag book.image, class:"book-image"%>
              <% else %>
                <%= image_tag 'png.png', class:"book-image"%>
              <% end %>
            </div>
            <div class="book-title">
              <%= link_to book.title, book_path(book), class:"link-to" %>
            </div>
          </li>
        <% end %>
      <% else %>
        <div class="book-title">
          ログインまたは会員登録をしてください。
        </div>
      <% end %>
    </ul>
    <% if user_signed_in? %>
      <div class="highlight-bar">
        <%= link_to "あなたのハイライト", highlights_path(id: current_user.id), class:"link-to" %>
      </div>
      <div class="new-book-bar">
        <%= link_to "本追加", new_book_path, class:"link-to" %> 
      </div>
    <% end %>
</div>
<% breadcrumb :root %>