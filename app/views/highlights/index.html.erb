    <div class="highlight-text">
      「<%= highlight.text %>」
    </div>
        <div class="highlight-title">
      <%= highlight.book.title %>
    </div>
    <div class="highlight-page">
      <%= highlight.pagenum %>ページ
    </div>
  </div>
  <% end %>
</div>